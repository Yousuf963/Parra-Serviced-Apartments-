@page
@model PSA_AB_YM_JS.Pages.Register.CreateModel

@{
    ViewData["Title"] = "Create";
}

<h1>Register Traveller Details</h1><br><br>

@*<h4>Traveller</h4>
<hr />*@
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Traveller.GivenName" class="control-label"></label>
                <input asp-for="Traveller.GivenName" class="form-control" />
                <span asp-validation-for="Traveller.GivenName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Traveller.Surname" class="control-label"></label>
                <input asp-for="Traveller.Surname" class="form-control" />
                <span asp-validation-for="Traveller.Surname" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Traveller.email" class="control-label"></label>
                <input asp-for="Traveller.email" class="form-control" />
                <span asp-validation-for="Traveller.email" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Traveller.postcode" class="control-label"></label>
                <input asp-for="Traveller.postcode" class="form-control" />
                <span asp-validation-for="Traveller.postcode" class="text-danger"></span>
            </div>
            <div hidden="hidden"  class="form-group">
                <label asp-for="Traveller.TheBookings" class="control-label"></label>
                <input asp-for="Traveller.TheBookings" class="form-control" />
                <span asp-validation-for="Traveller.TheBookings" class="text-danger"></span>
            </div>
            <div  class="form-group">
                <label asp-for="Traveller.Password" class="control-label"></label>
                <input asp-for="Traveller.Password" class="form-control" />
                <span asp-validation-for="Traveller.Password" class="text-danger"></span>
            </div>
            
            <br>
            
            <div class="form-group">
                <input type="submit" value="Register" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

